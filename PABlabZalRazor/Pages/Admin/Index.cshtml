@page
@model AdminPanel.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Panel";
}

<h2>Admin Panel</h2>

<h3>Cars</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>LicensePlate</th>
            <th>PricePerDay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.MadeBy</td>
                <td>@car.Model</td>
                <td>@car.LicensePlate</td>
                <td>@car.PricePerDay</td>
            </tr>
        }
    </tbody>
</table>

<h3>Clients</h3>
